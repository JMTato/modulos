<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">
    <t t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <!-- Agregar botón "Ocultar Precios" antes del botón "Imprimir Recibo" -->
        <xpath expr="//div[contains(@class, 'button print')]" position="before">
            <t t-call="pos_receipt_hide_price.hide_price"/>
        </xpath>

        <!-- Pasar el estado `hidePriceState` al componente `OrderReceipt` -->
        <xpath expr="//OrderReceipt" position="attributes">
            <attribute name="t-set-prop">hidePriceState</attribute>
        </xpath>
    </t>
</templates>