<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template">
    <t t-name="pos_receipt_hide_price.hide_price">
        <button class="button price_hidden" t-on-click="hidePrice">
            <i class="fa" t-att-class="'fa ' + (priceHidden ? 'fa-eye' : 'fa-eye-slash')"/>
            <t t-if="priceHidden"> Show Price</t>
            <t t-else=""> Hide Price</t>
        </button>
    </t>
</templates>