<odoo>
    <record id="view_garantia_form" model="ir.ui.view">
        <field name="name">garantia.registro.form</field>
        <field name="model">garantia.registro</field>
        <field name="arch" type="xml">
            <form string="Registro de Garantías">
                <sheet>
                    <group>
                        <field name="referencia"/>
                        <field name="nombre_completo"/>
                        <field name="nif"/>
                        <field name="movil"/>
                        <field name="calle"/>
                        <field name="numero"/>
                        <field name="ciudad"/>
                        <field name="cp"/>
                        <field name="pais_id"/>
                        <field name="company_id" readonly="1"/>
                        <field name="fecha_registro"/>
                        <field name="ubicacion" readonly="1"/>
                        <field name="codigo_barras"/>
                        <field name="imagenes" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_garantia_tree" model="ir.ui.view">
        <field name="name">garantia.registro.tree</field>
        <field name="model">garantia.registro</field>
        <field name="arch" type="xml">
            <tree string="Registros de Garantías">
                <field name="referencia"/>
                <field name="nombre_completo"/>
                <field name="movil"/>
                <field name="ciudad"/>
                <field name="pais_id"/>
                <field name="fecha_registro"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_garantia_root" name="Garantías" sequence="10"/>
    <menuitem id="menu_garantia" name="Registros de Garantías" parent="menu_garantia_root" action="action_garantia"/>
    
    <record id="action_garantia" model="ir.actions.act_window">
        <field name="name">Garantías</field>
        <field name="res_model">garantia.registro</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>